page{
  font-size: 24rpx;
}
.container{
  height: 100%;
}
swiper{
  height: 100%;
}
.swiper-tab{
width: 100%;
border-bottom: 1rpx solid #e5e5e5;
text-align: center;
padding: 40rpx 0 0;
font-weight: bold;
}
.swiper-tab-item{
display: inline-block;
color:#999;
font-size: 30rpx;
margin: 0 50rpx;
padding-bottom: 30rpx;
text-align: center;
}
.active .underline{
  width: 40rpx;
  height: 8rpx;
  background: #3eccb3;
  display: block;
  margin: 8rpx auto 0;
}
.active{
color:#333;
}
.article-item{
  padding: 40rpx 30rpx;
  border-bottom: 1px solid #e5e5e5;
}
.title{
  font-size: 34rpx;
  color: #333;
  padding-bottom: 20rpx;
}
.lables{overflow: hidden;color: #999;}
.left{float: left;}
.right{float: right;}

.creatdate,.read-num{margin-right: 20rpx;}
.minerank{
  padding: 30rpx;
  background: #f9f9f9;
  vertical-align: middle;
  overflow: hidden;
}
.line{
  height: 20rpx;
  background: #f2f3f4;
}
.rank-l{
  float: left;
  text-align: center;
}
.rank-l view{color: #999;
  font-size: 24rpx;}
.rank-l .rank-n{
  font-size: 36rpx;
  color: #3eccb3;
  margin-bottom: 12rpx;
}
.rank-r{
  line-height: 80rpx;
  margin-left: 145rpx;
}

.minenickname{
  font-size: 30rpx;
  color: #333;
  display: inline-block;
  vertical-align: middle;
}
.minenumber{
  font-size: 36rpx;
  color: #3eccb3;
  font-weight: bold;
  float: right;
}
.rank-item{
  padding: 30rpx 30rpx 30rpx 0;
  border-bottom:1px solid #eee;
}
.rank-item .rank-n-o{
  line-height: 40rpx;
  font-size: 36rpx;
  color: #333;
  font-weight: bold;
}
.rank-n-o image{
  width: 46rpx;
  height: 46rpx;
}
.rank-item  .rank-r{
  line-height: 40rpx;
  margin-left: 95rpx;
}